@model ProjectManager.ViewModels.CreateFormViewModel
@using ProjectManager.Models
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a Project</h2>
<form class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(m => m.ProjectTitle)
        @Html.TextBoxFor(m => m.ProjectTitle, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ProjectDetails)
        @Html.TextAreaFor(m => m.ProjectDetails, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Task)
        @Html.TextAreaFor(m => m.Task, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TaskHandler)
        @Html.TextBoxFor(m => m.TaskHandler, new { @class = "form-control" })
        <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control" })
        </div>
    </div> <div class="form-group">
        @Html.LabelFor(m => m.Status)
        @Html.DropDownListFor(m => m.Status, new SelectList(Model.Statuses, "Id", "Name"),"", new { @class = "form-control" })
    </div>
            <button type="submit" class="btn btn-primary">Create</button>
    
</form>
